<div>Potions store</div>
  <form action="/profile/create" class="">
    <button>Create your own</button>
  </form>
{{#each potions}}
<i class="{{this.icon}}"></i>
<p>Name: {{this.name}}</p>

    <form method="POST" action="/profile/potions/{{this._id}}/add" >
        <button type="submit" class="">+</button>
    </form>

    <form method="POST" action="/profile/potions/{{this._id}}/delete" >
        <button type="submit" class="">-</button>
    </form>
{{/each}}