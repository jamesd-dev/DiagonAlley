<div class="shop-create-panel main-panel">
    <form method="POST" action="/shop/{{type}}/create" >
        <div class="item-name-panel">
            <label>{{this.name}} Name</label>
            <input type="text" name="name" class="" placeholder="Name">
        </div>
        <div class="item-desc-panel">
            <label>Description</label>
            <textarea type='text' name="description" class="" placeholder="Controls fire"></textarea>
        </div>
          {{#if errorMessage}}
            <div class="error">{{errorMessage}}</div>
          {{/if}}
        <h3>{{author}}</h3>
        <div class="container" id="create">
        <button type="submit" class="create-button">Create</button>
        </div>
    </form>
</div>