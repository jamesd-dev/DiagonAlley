<img src="/images/iron-bracket.png" alt="iron-bracket" id="right-bracket"> --}}

<div class="shop-items-panel main-panel">
  <ul class='shop-item-list'>
    <li class="unowned create-shop-item">
      <div class="shop-item">

        <div class="icon-panel">
          <i class="fas fa-star"></i>
        </div>

        <div class="item-text-panel">

          <div class="name-panel">
            <p>Create Your Own</p>
          </div>
          <div class="desc-panel">
            <p>If it's in the school rules, it's just not fun</p>
          </div>

        </div>

        <div class="button-panel">
            <a href="/shop/{{type}}/create" class="shop-button shop-add-button"><i class="fas fa-plus"></i></a>
        </div>

      </div>
    </li>
  {{#each items}}
    <li class="{{#if this.owned}}owned{{else}}unowned{{/if}}">
      <div class="shop-item">

        <div class="icon-panel">
          <i class="{{this.icon}}"></i>
        </div>

        <div class="item-text-panel">

          <div class="name-panel">
            <p>{{this.name}}</p>
          </div>
          <div class="desc-panel">
            <p>
              {{this.description}}
              {{#if this.author}}
                <br>
                <strong>-{{this.author}}</strong>
              {{/if}}
              <br>
              <strong>-{{this.money}} Galleons</strong>
            </p>
          </div>

        </div>

        <div class="button-panel">
            {{#if this.owned}}
              <form method="POST" action="/shop/{{../type}}/{{this._id}}/delete">
                <button type="submit" class="shop-button shop-delete-button"><i class="fas fa-minus"></i></button>
              </form>
            {{else}}
              <form method="POST" action="/shop/{{../type}}/{{this._id}}/add">
                <button type="submit" class="shop-button shop-add-button"><i class="fas fa-plus"></i></button>
              </form>
            {{/if}}
            {{#if this.author}}
                <a href="/shop/{{../type}}/{{_id}}/update" class="shop-button shop-update-button"><i class="fas fa-pen"></i></a>
            {{/if}}
            {{#if errorMessage}}
            <div class="error">{{errorMessage}}</div>
          {{/if}}
        </div>
      </div>
    </li>
  {{/each}}
  </ul>
</div>
